# Production settings example (Docker + cloudflared)
DEBUG=0
SECRET_KEY=change-me-very-long-random
ALLOWED_HOSTS=portal.example.be
CSRF_TRUSTED_ORIGINS=https://portal.example.be

# If cloudflared forwards X-Forwarded-Proto, keep =1.
# If you get redirect loops, set to 0 and disable SECURE_SSL_REDIRECT.
SECURE_PROXY_SSL_HEADER=1
SECURE_SSL_REDIRECT=1
SESSION_COOKIE_SECURE=1
CSRF_COOKIE_SECURE=1

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.protonmail.ch
EMAIL_PORT=587
EMAIL_HOST_USER=no-reply@portal.example.be
EMAIL_HOST_PASSWORD=change-me-smtp-token
EMAIL_USE_TLS=1
EMAIL_USE_SSL=0
EMAIL_TIMEOUT=20
DEFAULT_FROM_EMAIL=no-reply@portal.example.be
SITE_URL=https://portal.example.be
TRAINING_CUSTOMERS_CSV_PATH=

# Persist sqlite in Docker volume
SQLITE_PATH=/app/data/db.sqlite3
